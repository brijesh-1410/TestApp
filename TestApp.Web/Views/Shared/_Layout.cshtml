<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @AppResources.ContactManagement</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/toastr.css")
    @Scripts.Render("~/bundles/modernizr")

    @* To User angular js *@
    @Scripts.Render("~/Scripts/angular.min.js")
    @Scripts.Render("~/Scripts/Common.js")
    <script type="text/javascript">
        var app = angular.module('app', []);
        var APIUrl = '@System.Configuration.ConfigurationManager.AppSettings["APIUrl"]';
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Contact Management", "Index", "Contact", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @AppResources.ContactManagement</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/toastr.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
